function QSObject(querystring){ 
    //Create regular expression object to retrieve the qs part 
    var qsReg = new RegExp("[?][^#]*","i"); 
    hRef = unescape(querystring); 
    var qsMatch = hRef.match(qsReg); 
 
    //removes the question mark from the url 
    qsMatch = new String(qsMatch); 
    qsMatch = qsMatch.substr(1, qsMatch.length -1); 
 
    //split it up 
    var rootArr = qsMatch.split("&"); 
    for(i=0;i<rootArr.length;i++){ 
        var tempArr = rootArr[i].split("="); 
        if(tempArr.length ==2){ 
            tempArr[0] = unescape(tempArr[0]); 
            tempArr[1] = unescape(tempArr[1]); 
 
            this[tempArr[0]]= tempArr[1]; 
        } 
    } 
} 
 
var scriptSrc = document.getElementById("myscript").src.toLowerCase();
qs = new QSObject(scriptSrc); 
var val = qs.obj1;

$(function(){

$("ul.topnav li:nth-child("+ val +")").addClass("selected"); // for default action on page load
	

$(".container ul").mouseenter(function(){  
	mouseover = true; })
       .mouseleave(function(){     
	mouseover = false; }); 

//$("ul.topnav li .sub").css({'opacity':'0'});
//$(this).find(".sub").css({'width' : '360px'});
 
$("ul.topnav li").hoverIntent({
	sensitivity: 2, // number = sensitivity threshold (must be 1 or higher)
	interval: 10,   // number = milliseconds for onMouseOver polling interval
	over: showSub, // function = onMouseOver callback (REQUIRED)    
	timeout: 30, // number = milliseconds delay before onMouseOut    
	out: hideSub // function = onMouseOut callback (REQUIRED)    
});





}); // close document.ready

function showSub(){ 

		//Following events are applied to the subnav itself (moving subnav up and down)
		$(this).find("ul").stop().fadeTo(5, 1).show();
                //$(this).find(".sub").stop().fadeTo(5, 1).show();
                $(this).find(".subsub").stop().fadeTo(5, 1).show();		
		
	$(this).addClass("subhover");	
}

function hideSub(){ 
$(this).not(".selected").css({ 'background-color' : 'transparent'});
$(this).find(".subnav").stop().fadeTo(2, 0, function() {
		  $(this).hide(); 
		  
	  });
	  
$(this).find(".sub").stop().fadeTo(2, 0, function() {
		  $(this).hide(); 
		  
	  });	  
	  
	 $(this).find(".subsub").stop().fadeTo(2, 0, function() {
		  $(this).hide(); 
		  
	  });	 
	  
$(this).removeClass("subhover");

} // end function






	